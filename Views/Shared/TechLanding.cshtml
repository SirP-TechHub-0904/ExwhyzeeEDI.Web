
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>EXWHYZEE TECH CLUB</title>
    <!-- Responsive Meta Tag -->
    <link rel="icon" href="~/Content/ICON-CLUB.png" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://exwhyzee.ng/libraries/admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <style>

        .footer {
            background: #fafafa;
        }

        article, aside, details, figcaption, figure, footer, header, hgroup, main, menu, nav, section, summary {
            display: block;
        }

        .p-20 {
            padding: 20px !important;
        }

        input {
            border-radius: 0;
        }

        .form-control {
            border-radius: 0;
        }

        button, html input[type=button], input[type=reset], input[type=submit] {
            border-radius: 0px;
        }
    </style>
    <style>
        * {
    margin: 0;
    padding: 0;
}

body {
    margin: 0;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 20px;
    color: black;
    line-height: 1.9;
}

#container {
    background-image: url('https://images.pexels.com/photos/373076/pexels-photo-373076.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260');
    background-size: cover;
    background-position: center; 
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0 20px;
}

#container h1 {
    font-size: 50px;
    line-height: 1.2;
}

#container p {
    font-size: 20px;
}

#container .button {
    font-size: 18px;
    text-decoration: none;
    color: black;
    border: 2px solid black;
    padding: 10px 10px;
    border-radius: 10px;
    margin-top: 20px;
    transition: all .2s ease-in-out;
    font-size: 1.5rem;
}

#container .button:hover {
    background: black;
    color: blanchedalmond;
}
    </style>
</head>
<body>
    <div id="container">
        <h1>Welcome to Exwhyzee Tech club</h1>
        <p>
           You will be contacted for further screening.
        </p>
        <a href="/" class="button">Redefining the way we learn. Back to Home</a>
    </div>
    @RenderBody()
</body>
</html>
