@model ExwhyzeeEDI.Web.Models.Entities.Profile

@{
    ViewBag.Title = "PrintCertificate";
    Layout = "~/Areas/Admin/Views/Shared/_Certificate.cshtml";
}
<style>
    /* Container holding the image and the text */
    .container {
        position: relative;
    }

    .logo {
        position: absolute;
        left: 38%;
        right: 50%;
        top: 11%;
    }

    .title {
        position: absolute;
        top: 21%;
        font-family: Arial;
        left: 15%;
    }

    .h1title {
        font-size: 40px;
        color: #343433;
    }

    .title2 {
        position: absolute;
        left: 48%;
        right: auto;
        top: 28%;
        font-family: Arial;
    }

    .h1title2 {
        font-size: 30px;
        color: #343433;
        font-weight: 500;
    }

    .cert {
        position: absolute;
        left: 12%;
        right: auto;
        top: 33%;
        font-family: Arial;
    }

    .cert-info {
        font-size: 25px;
        color: #343433;
        font-weight: 500;
        font: 500 76px/1.3 'Arizonia', Helvetica, sans-serif;
    }
</style>
<link href='http://fonts.googleapis.com/css?family=Arizonia' rel='stylesheet' type='text/css'>
<input id="n" type="hidden" value="@Model.Surname-@Model.FirstName-@Model.OtherName-edi-certificate" />
<div>
    <a id="a-make" href="#" style="text-align:center;" class="btn btn-primary">Prepare for Download</a>
    <a id="a-download" href="#" style="display:none;text-align:center;" class="btn btn-primary">Download Certificate</a>
</div>

<div id="main">
    <div id="screenshot">
        <div class="container">
            <img src="~/Content/certificate-template.jpg" alt="" style="width: 100%; ">


            <div style="" class="logo">
                <img src="~/Content/EXWHYZEE_TECHNOLOGIES_LTD_small.png" style="width:300px;" />
            </div>
            <div style="" class="title">
                <h1 style="" class="h1title">ENTREPRENUERSHIP DEVELOPMENT INSTITUTE</h1>
            </div>
            <div style="" class="title2">
                <h1 style="" class="h1title2">(E.D.I)</h1>
            </div>
            <div style="" class="cert">
                <h1 style="" class="cert-info">Entreprenuership Training Certificate</h1>
            </div>
            <div style="position: absolute;left: 42%;right: auto;top: 48%;font-family: Arial;">
                <h3 style="font-size: 30px;color: #343433;font-weight: 500;" class="h1title2">This certifies that</h3>
            </div>
            <div style="position: absolute;left: 37%;right: auto;top: 58%;font-family: Arial;text-align:center !important;">
                <h2 style="font-size: 30px;color: #343433;font-weight: 900;text-align:center !important;text-transform:uppercase;" class="h1title2">@Model.Surname @Model.FirstName @Model.OtherName </h2>
            </div>
            <div style="position: absolute;left: 8%;right: auto;top: 64%;font-family: Arial;">
                <hr style="border:2px solid #e63e34;width:1100px;" />
            </div>
            <div style="position: absolute; left: 18%; right: auto; top: 66%; font-family: Arial;">
                <h3 style="font-size: 27px;color: #343433;font-weight: 500;" class="h1title2">
                    has successfully completed this training for the duration of one week
                </h3>
            </div>
            <div style="position: absolute;left: 8%;right: auto;top: 70%;font-family: Arial;">
                <h3 style="font-size: 27px;color: #343433;font-weight: 500;" class="h1title2">
                    Awarded this day <span style="border-bottom:2px solid #e63e34;font-weight:700;">@Model.CertificateDate</span>. Your hardwork, dedication and achievement will be cherished.
                </h3>
            </div>

            <div style="position: absolute;left: 80%;right: auto;top: 80%;font-family: Arial;">

                <img src="~/Content/admin-signature.png" style="height:60px;" />
            </div>
            <div style="position: absolute;left: 79%;right: auto;top: 86%;font-family: Arial;">
                <hr style="border:2px solid #e63e34;width:210px;" />
            </div>
            <div style="position: absolute;left: 5%;right: auto;top: 81%;font-family: Arial;">
                <img class="img-circle" src="data:image/jpg;base64,@(Convert.ToBase64String(ViewBag.img))" style="height:100px;width:100px;" alt="" />

            </div>
            <div style="position: absolute;left: 13%;right: auto;top: 86%;font-family: Arial;">
                <h3 style="font-size: 16px;color: #343433;font-weight: 500;" class="h1title2">
                    <span style="color:#e63e34;">REF. NO.::</span> @*EDI/3232DD33223*@ @Model.CertificateId
                </h3>
            </div>
            <div style="position: absolute;left: 13%;right: auto;top: 88%;font-family: Arial;">
                <h3 style="font-size: 14px;color: #343433;font-weight: 500;" class="h1title2">
                   follow the link <span style="color:#3d30e9;">http://edi.exwhyzee.ng/Admin/Users/Certificate</span> or scan the barcode for verification
                </h3>
            </div>
            <div style="position: absolute;left: 79%;right: auto;top: 84%;font-family: Arial;">
                <h3 style="font-size: 30px;color: #343433;font-weight: 500;" class="h1title2">@ViewBag.item.SignatureName</h3>

            </div>
        </div>
    </div>
</div>

