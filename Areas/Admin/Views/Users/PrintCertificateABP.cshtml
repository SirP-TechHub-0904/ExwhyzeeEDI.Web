@model ExwhyzeeEDI.Web.Models.Entities.ABP

@{
    ViewBag.Title = "ABP Print Certificate";
    Layout = "~/Areas/Admin/Views/Shared/_Certificate.cshtml";
}
<style>
    /* Container holding the image and the text */
    .container {
        position: relative;
    }

    .logo {
        position: absolute;
        left: 38%;
        right: 50%;
        top: 11%;
    }

    .title {
        position: absolute;
        top: 21%;
        font-family: Arial;
        left: 15%;
    }

    .h1title {
        font-size: 40px;
        color: #343433;
    }

    .title2 {
        position: absolute;
        left: 48%;
        right: auto;
        top: 28%;
        font-family: Arial;
    }

    .h1title2 {
        font-size: 30px;
        color: #343433;
        font-weight: 500;
    }

    .cert {
        position: absolute;
        left: 12%;
        right: auto;
        top: 33%;
        font-family: Arial;
    }

    .cert-info {
        font-size: 25px;
        color: #343433;
        font-weight: 500;
        font: 500 76px/1.3 'Arizonia', Helvetica, sans-serif;
    }
</style>
<link href='http://fonts.googleapis.com/css?family=Arizonia' rel='stylesheet' type='text/css'>
<input id="n" type="hidden" value="@Model.FullName-edi-certificate" />
<div>
    <a id="a-make" href="#" style="text-align:center;" class="btn btn-primary">Prepare for Download</a>
    <a id="a-download" href="#" style="display:none;text-align:center;" class="btn btn-primary">Download Certificate</a>
</div>

<div id="main">
    <div id="screenshot">
        <div class="container">
            <img src="~/Content/cert-img.jpg" alt="" style="width: 100%; ">


            <div style="position: absolute; right: auto; top: 32%; font-family: Arial; font-weight: 900; font-size: 40px;left:@Model.FullNameStyle;">
                <h3 style="">
                    @Model.FullName
                </h3>
            </div>
          
            <div style="position: absolute; left: 12%; right: auto; top: 30%; font-family: Arial;">
                <img class="img-circle" src="data:image/jpg;base64,@(Convert.ToBase64String(ViewBag.img))" style="height:100px;width:100px;" alt="" />

            </div>
            <div style="position: absolute; right: auto; top: 40%; font-family: Arial; color: #00923f; font-weight: 800;left:43%;">
                <h3 style="">
                    <span>REG. NO.:</span>@Model.RegNumber
                </h3>
            </div>
            <div style="position: absolute; left: 30%; right: auto; top: 91%; font-family: Arial; font-size: 12px;">
                <h3>
                    follow the link <span style="color:#3d30e9;">http://edi.exwhyzee.ng/Admin/Users/Certificate</span> or scan the barcode for verification
                </h3>
            </div>
           
        </div>
    </div>
</div>


