@model ExwhyzeeEDI.Web.Models.Entities.Profile

@{
    ViewBag.Title = "Certverify";
    Layout = "~/Views/Shared/_CertVerifyLayout.cshtml";
}


    <div class="row" style="margin:20px auto;">
        <!-- left column -->
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Certification Verification</h3>
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                            @TempData["error"]
                        </div>
                    }
                </div>
                <table class="table-bordered" style="width:100%;padding:10px">
                    <tr>
                        <th style="width:100%;padding:10px">Full Name</th>
                        <th style="width:100%;padding:10px">@Model.Surname @Model.FirstName @Model.OtherName</th>
                    </tr>
                    <tr>
                        <th style="width:100%;padding:10px">Certificate Ref. No.</th>
                        <th style="width:100%;padding:10px">@Model.CertificateId</th>
                    </tr>
                    <tr>
                        <th style="width:100%;padding:10px">Certificate Date</th>
                        <th style="width:100%;padding:10px">@Model.CertificateDate</th>
                    </tr>
                    <tr>
                        <th style="width:100%;padding:10px">Status</th>
                        <th style="color:#34a827;font-weight:900;width:100%;padding:10px;">Comfirmed and Valid</th>
                    </tr>
                </table>


            </div>
        </div>
        <div class="col-md-3"></div>

    </div>